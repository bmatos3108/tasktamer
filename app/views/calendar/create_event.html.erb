<h1>New Event</h1>

<%= form_with model: @event, url: calendar_events_path, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :start_date %>
    <%= form.datetime_select :start_date %>
  </div>

  <div>
    <%= form.label :end_date %>
    <%= form.datetime_select :end_date %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.submit 'Create Event' %>
  </div>
<% end %>

<%= link_to 'Back to Calendar', calendar_path %>
