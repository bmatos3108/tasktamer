<!DOCTYPE html>
<html>
<head>
  <title>Create a New Task</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="task-form-container">
    <h1 class="task-form-title">Create a New Task</h1>

    <%= form_with(model: @task, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :title, class: 'task-form-label' %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :description, class: 'task-form-label' %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :due_date, class: 'task-form-label' %>
        <%= form.datetime_select :due_date, class: 'form-control datetime-select' %>
      </div>

      <div class="form-group">
        <%= form.label :priority, class: 'task-form-label' %>
        <%= form.select :priority, [['Low', 1], ['Medium', 2], ['High', 3]], {}, class: 'form-control' %>
      </div>

      <div class="button-group">
        <%= form.submit 'Create Task', class: 'btn btn-custom' %>
        <%= link_to 'Back to Tasks', tasks_path, class: 'btn btn-secondary-custom' %>
      </div>
    <% end %>
  </div>
</body>
</html>
