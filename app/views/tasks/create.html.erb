<div class="task-body">
  <%= form_with(model: Task.new, url: tasks_path, local: true) do |form| %>
    <div class="field">
      <%= form.label :title, 'Add your tasks here' %>
      <%= form.text_field :title, id: 'taskText', class: 'task-input' %>
    </div>

    <div class="field">
      <%= form.label :description, 'Description' %>
      <%= form.text_area :description %>
    </div>

    <div class="actions">
      <%= form.submit 'Add Task', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <h5 id="Alert"></h5>
</div>
