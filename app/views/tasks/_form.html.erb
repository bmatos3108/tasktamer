<!-- app/views/tasks/_form.html.erb -->
<%= form_with(model: @task, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :due_date %>
    <%= form.date_select :due_date %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, ['Low', 'Medium', 'High'] %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
