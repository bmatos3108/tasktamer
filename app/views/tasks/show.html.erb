<h1><%= @task.name %></h1>
<p><%= @task.description %></p>

<h2>Notes</h2>
<% if @notes.any? %>
  <div class="notes-container">
    <% @notes.each do |note| %>
      <div class="note-item">
        <p><%= note.content %></p>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No notes available.</p>
<% end %>
<h2>Reminders</h2>
<%= form_with(model: [@task, @task.reminders.new], url: create_task_reminder_path(@task), local: true) do |form| %>
  <div class="field">
    <%= form.label :message %>
    <%= form.text_area :message %>
  </div>
  <div class="field">
    <%= form.label :reminder_at %>
    <%= form.datetime_select :reminder_at %>
  </div>
  <div class="actions">
    <%= form.submit 'Add Reminder' %>
  </div>
<% end %>

<ul>
  <% @task.reminders.each do |reminder| %>
    <li>
      <%= reminder.message %> - <%= reminder.reminder_at %>
      <%= button_to 'Delete', destroy_task_reminder_path(@task, reminder), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
