<!DOCTYPE html>
<html>
<head>
  <title>Create a New Task</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="task-form-container">
      <h1 class="task-form-title">🎉 Create a New Task 🎉</h1>
      <%= form_with(model: @task, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :due_date %>
          <%= form.datetime_select :due_date, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :priority %>
          <%= form.select :priority, [['Low', 1], ['Medium', 2], ['High', 3]], {}, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.submit 'Create Task 🎉', class: 'btn-custom' %>
        </div>
      <% end %>

      <%= link_to 'Back to Tasks', tasks_path, class: 'btn-custom' %>
    </div>
  </div>
</body>
</html>
